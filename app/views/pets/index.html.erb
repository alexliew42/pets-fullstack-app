<h1>All Pets</h1>

<% @pets.each do |pet| %>
  <div class="row">
  <div class="col-sm-6 mb-3 mb-sm-0">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= pet.name %></h5>
        <p class="card-text"><%= pet.species %></p>
        <a href="/pets/<%= pet.id %>" class="btn btn-primary">More Info</a>
        <img src="<%= pet.image %>">
      </div>
    </div>
  </div>
</div>
<%end%>






